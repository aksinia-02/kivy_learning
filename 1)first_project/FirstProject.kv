PageLayoutExample:

<PageLayoutExample@PageLayout>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height


<StackLayoutExample>:
    # multiply lines
    # left-right, top-bottom
    # orientation: "rl-tb"
    padding: ("20dp", "40dp")
    spacing: "20dp", "20dp"

<GridLayoutExample@GridLayout>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
#rows, cols
    cols: 2
    rows: 2
    Button:
        text: "A"
        size_hint: 0.5, 1
    BoxLayoutExample:
    Button:
        text: "C"
        size_hint: 0.5, 1

<AnchorLayoutExample>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    #right, left, center
    anchor_x: "left"
    # bottom, op, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "A"

<BoxLayoutExample>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: 1, .5
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B"
            size_hint: 1, 2
        Button:
            text: "B"
            size_hint: 1, 2
        Button:
            text: "B"
            size_hint: 1, 2
    Button:
        text: "C"
        # size: "40dp", "40dp"
        # default size without size
        size_hint: None, None
        height: "60dp"
        # x, center_x, right
        # y, center_y, top
        # pos_hint: {"x": .1}
        pos_hint: {"right": 0.5}

<MainWidget>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        text: "Button"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 0, 1
    Button:
        text: "Button1"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
    Label:
        text: "Label1"
        size: "100dp", "80dp"
        pos: "300dp", "400dp"
        color: .5, 0, 0.5, 1